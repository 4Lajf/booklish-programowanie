@model IEnumerable<booklish.Models.Books>

@{
    ViewData["Title"] = "Bookslish";
}


<h1>Books</h1>


<div class="row-mt-5 mb-2">
    @if (Model != null)
    {
        @foreach (var item in Model)
        {
            <div class="album py-9">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="card mb-3 shadow-sm">
                                <img src="image/@Html.DisplayFor(modelItem => item.Img)" alt="zdjęcie">
                                    <div class="d-flex justify-content-between align-items-center">
                                    <div class="card-text align-items-center">
                                        <h4>Title: @Html.DisplayFor(modelItem => item.Title)</h4>
                                        <h5>Price: @Html.DisplayFor(modelItem => item.Price) zł</h5>
                                        <h5>Description: @Html.DisplayFor(modelItem => item.Description)</h5>
                                        <h5>Auhtor: @Html.DisplayFor(modelItem => item.Author)</h5>
                                        <h5>Genre: @Html.DisplayFor(modelItem => item.Genre)</h5>
                                        <p><a class="btn btn-warning" href=@($"/Home/Add/{item.Id}")>Buy</a></p>
                                    </div>
                                </div>
                            </div>
                         </div>
                     </div>
                 </div>
            </div>
        }
    }
    else
    {
        <p>Brak danych do wyświetlenia.</p>
    }
</div>